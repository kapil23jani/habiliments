<div class="container"><br>
  <div class="row">
    <div class="col-sm-4", id="cover_picture">
      <div class="cover_picture"><br>
        <%= image_tag(@product.product_cover_pic, width: "320", height: "280") %>
      </div><br><br>
    </div>&nbsp;&nbsp;&nbsp;&nbsp;<br><br>
    <div class="col-sm-4">
      <div class="product_details">
        <b>Product Name</b> - <%= @product.product_name%><br><br>
        <b>Brand Name</b> - <%= @product.brand_name%><br><br>
        <b>Material</b> - <%= @product.material %><br><br>
        <b>Description</b> - <%= @product.description %> <br><br>
        <b>Colour</b> - <%= @product.colour %><br><br>
      </div>
    </div>
  </div>

  <br><br><br><%= link_to "Back", user_category_sub_category_path(current_user, @product.category_id, @product.sub_category_id), class: "btn btn-warning" %>
</div>