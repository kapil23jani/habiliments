<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2><%= params[:role] %>  Sign up</h2>
        <%= form_for @user, url: users_path, method: :post do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
          </div>
          <div class="field">
            <%= f.hidden_field :role, value: params[:role] %>
          </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <div class="seller">
        <% if params[:role] == "Customer" %> 
        <%else params[:role] == "Seller"%>
        <h1></h1>
         <%= f.fields_for :sellerprofile do |form| %>
            <%= form.label :name %> *
            <%= form.text_field :name, class: " form-control"%>
            <%= form.label :contact_no %> *
            <%= form.text_field :contact_no, class: " form-control"%>
            <%= form.label :phone_no %> *
            <%= form.text_field :phone_no, class: " form-control"%>
            <%= form.label :fax_no %> *
            <%= form.text_field :fax_no, class: " form-control"%>
            <%= form.label :street1 %>
            <%= form.text_field :street1, class: " form-control" %>
            <%= form.label :landmark %>
            <%= form.text_field :landmark, class: " form-control" %>
            <%= form.label :city %>
            <%= form.text_field :city, class: " form-control" %>
            <%= form.label :state %>
            <%= form.text_field :state , class: " form-control"%>
            <%= form.label :country %>
            <%= form.text_field :country, class: " form-control" %>
            <%= form.label :zipcode %>
            <%= form.text_field :zipcode, class: " form-control" %>
            <%= form.label :trade_licence %>  *
            <%= form.text_field :trade_licence, class: " form-control" %>
            <%= form.label :gst_no %>  *
            <%= form.text_field :gst_no, class: " form-control" %>
            <%= form.label :sales_tax %>  *
            <%= form.text_field :sales_tax, class: " form-control" %><br>
        <%end%>
      <%end%>
      </div><br>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
  