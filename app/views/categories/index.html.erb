<div class="container"><br>
	<div class="row">
		<% @categories.each do |category|%>	
			<div class="col-sm-4">
				<div class="card" style="width: 18rem;">
				  <%= image_tag(category.category_pic) %>
				  <div class="card-body">
				    <center><h5 class="card-title"><%= category.name%></h5></center>
				  </div>
				</div>
			</div>
		<%end%>
	</div>
</div>









<%= link_to "Add new Category", new_user_category_path(current_user), class: "btn btn-primary" %>