<div class="container"><br>
  <div class="row">
    <% @categories.each do |category|%> 
      <div class="col-sm-4">
          <div class="card" style="width: 22rem;">
            <%= link_to image_tag(category.category_pic,  width: "350", height: "250"), user_category_path(current_user, category) %>
            <div class="card-body">
              <center><h5 class="card-title"><%= link_to category.name, user_category_path(current_user, category), class: "nav-link"%></h5></center>
            </div>
            <%if current_user.role == "System Admin"%>
              <%= link_to "Edit", edit_user_category_path(category.user_id, category), class: "btn btn-warning "%> &nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Delete", user_category_path(category.user_id, category), class: "btn btn-danger ", method: :delete%>
            <%end%>
          </div>
      </div>
    <%end%>
  </div>
</div>

<% if current_user.role.nil? %>
  <%= link_to "Add new Category", new_user_category_path(current_user), class: "btn btn-primary" %> 
<%end%>




